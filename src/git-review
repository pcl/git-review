#!/bin/bash

function usage() {
    echo "Usage: $0 [<options>] [<object>...]"
}

if [ "$1" == "--help" ]; then
    usage
    exit 0
fi

revs=$(git rev-parse --no-flags --default HEAD "$@")
reviewoptions=$(git log --no-patch --format=%B $revs \
    | grep '^Review-Options:' \
    | sed 's/[^:]*://')

order=
diff_options=

function parse_options() {
    while [ $# -ne 0 ]; do
        if [[ "$1" == --order=* ]]; then
            order="$order$(echo "$1" | sed 's/--order=//' | tr ',' '\n')
"
        elif [[ "$1" == "-M" || "$1" == "-w" ]]; then
            diff_options="$diff_options $1"
        else
            echo "Ignoring unknown Review-Options flag: $1" >&2
        fi
        shift
    done
}

parse_options $reviewoptions

exec git log $diff_options -O <(echo "$order") "$@"
